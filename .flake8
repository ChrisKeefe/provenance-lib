[flake8]
; ignore = D203
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache/build directories
    __pycache__,
    build,
    # playtesting is a dumping ground for messy runner scripts and their results
    playtesting/*
    # playtesting is a dumping ground for makefile runner results
    replay_scripts/*
max-complexity = 15